        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Permite conexiuni HTTPS cÄƒtre Railway -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">web-production-9d359.up.railway.app</domain>
